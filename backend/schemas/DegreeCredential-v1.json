{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://kaushal-2001.github.io/DegreeIAM/DegreeCredential-v1.json-ld",
      "jsonSchema": "https://kaushal-2001.github.io/DegreeIAM/DegreeCredential-v1.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": [
        "string",
        "array",
        "object"
      ]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": [
        "string",
        "array"
      ],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": [
        "string",
        "object"
      ],
      "format": "uri",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": [
        "none",
        "index",
        "value"
      ]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "university",
        "degree",
        "major",
        "graduationYear",
        "studentId"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "university": {
          "type": "string"
        },
        "degree": {
          "type": "string"
        },
        "major": {
          "type": "string"
        },
        "graduationYear": {
          "type": "integer"
        },
        "gpa": {
          "type": "number"
        },
        "honors": {
          "type": "string"
        },
        "studentId": {
          "type": "string"
        }
      }
    },
    "credentialStatus": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "revocationNonce": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "proof": {
      "type": [
        "array",
        "object"
      ]
    }
  }
}